<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="設定">

        <EditTextPreference
            app:defaultValue="無"
            app:key="user_name"
            app:title="姓名"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="0.0.0.0"
            app:key="local_host"
            app:title="@string/local_host"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue=""
            app:key="connect_host"
            app:title="@string/connect_host"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="1212"
            app:key="port"
            app:title="連線埠"
            app:useSimpleSummaryProvider="true" />

        <DropDownPreference
            app:defaultValue="16"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="textSize"
            app:title="字體大小"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="sound_send"
            app:title="傳送/接收音效" />

    </PreferenceCategory>

    <PreferenceCategory app:title="關於">

        <EditTextPreference
            app:defaultValue="1.0"
            app:enabled="false"
            app:key="build"
            app:shouldDisableView="false"
            app:title="版本"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="鍾仁景\nchungjenching@gmail.com"
            app:enabled="false"
            app:key="author"
            app:shouldDisableView="false"
            app:title="開發人員"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="聊天程式"
            app:enabled="false"
            app:key="release_note"
            app:shouldDisableView="false"
            app:title="功能"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>